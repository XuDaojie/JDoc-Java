<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.github.xudaojie.jdoc.model.MarkdownModel">
    <select id="get" parameterType="long" resultType="io.github.xudaojie.jdoc.model.MarkdownModel">
        SELECT *
        FROM markdown
        WHERE id = #{id}
    </select>
    <select id="getListByOwner" resultType="io.github.xudaojie.jdoc.model.MarkdownModel">
        SELECT *
        FROM markdown
        WHERE owner = #{owner}
    </select>
    <select id="getListByProject" resultType="io.github.xudaojie.jdoc.model.MarkdownModel">
        SELECT *
        FROM markdown
        WHERE project_id = #{projectId}
    </select>
    <!--#         project_id = #{projectId},-->
    <!--#         module_id = #{moduleId},-->
    <!--#         handler = #{handler}-->
    <!--#         content = #{content},-->
    <update id="update">
        UPDATE markdown
        SET name = #{name}, content = #{content}
        WHERE id = #{id}
    </update>
    <insert id="insert" useGeneratedKeys="true" keyProperty="id"
        parameterType="io.github.xudaojie.jdoc.model.MarkdownModel">
        INSERT INTO markdown (project_id, module_id, name, content, creator, handler)
        VALUES (#{projectId}, #{moduleId}, #{name}, #{content}, #{creator}, #{handler})
    </insert>
    <update id="delete">
        UPDATE markdown
        SET is_delete = 1
        WHERE id = #{id}
    </update>
</mapper>